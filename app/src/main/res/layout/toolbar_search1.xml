<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_search_toolbar"
    android:minHeight="?attr/actionBarSize"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="2dp"
    android:background="@color/colorBlack"
    app:theme="@style/ThemeOverlay.AppCompat.Light"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    tools:ignore="UnusedAttribute,elevation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/logo_image"
                android:layout_width="@dimen/logo_mini_size"
                android:layout_height="@dimen/logo_mini_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/gap"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                app:srcCompat="@mipmap/ic_launcher"/>


            <View
                android:id="@+id/smal_logo_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/logo_image"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/logo_image"
                android:textColor="@color/colorWhite"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/search_touch_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/logo_image"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="@string/search_hint"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:theme="@style/Map_EditTextStyle"/>

                <ImageView
                    android:id="@+id/clear_search_image"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:contentDescription="@string/search_hint"
                    android:src="@drawable/ic_clear"
                    android:visibility="invisible"/>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/route_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_container"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/evaluate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/evaluate_button"
                android:text="Button"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/route_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/route_button"
                android:text="Button"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>